{
  "manifest_version": 3,
  "name": "X Portuguese Filter",
  "version": "1.0.0",
  "description": "Removes Portuguese posts from X (Twitter) timeline.",
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"]
}
